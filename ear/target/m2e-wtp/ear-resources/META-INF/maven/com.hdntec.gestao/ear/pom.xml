<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.hdntec.gestao</groupId>
  <packaging>ear</packaging>
  <name>Gest√£o Enterprise Archive</name>
  <version>0.0.1-SNAPSHOT</version>
  <parent>
  	<artifactId>gestao</artifactId>
  	<groupId>gestao</groupId>
  	<version>1.0</version>
  	<relativePath>../pom.xml</relativePath>
  </parent>
    <build>
		<defaultGoal>install</defaultGoal>
		<finalName>gestaoEAR</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<modules>					
						<JarModule>
							<groupId>br.com.hdntec.gestao</groupId>
							<artifactId>domain</artifactId>
							<includeInApplicationXml>true</includeInApplicationXml>
						</JarModule>
						<webModule>
                            <groupId>br.com.hdntec.gestao</groupId>
                            <artifactId>web</artifactId>                            
                        </webModule>
					</modules>
					<generateApplicationXml>true</generateApplicationXml>
					<earSourceExcludes>**/*.jar,pom.xml</earSourceExcludes>
					<fileNameMapping />
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>					
						<!-- <jboss> <version>4.2</version> <data-sources>
						<data-source>invision-ds.xml</data-source> </data-sources>

						</jboss> -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
				<version>1.3.1</version>
				<configuration>
					<jbossHome>C:/programas/jboss-4.2.3.GA</jbossHome>
					<server>default</server>
					<hostName>localhost</hostName>
					<type>remote</type>
					<port>8082</port>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>jboss-maven-plugin</artifactId>
			<version>1.3.1</version>
			<scope>provided</scope>
		</dependency>		
		<dependency>
			<groupId>br.com.hdntec.gestao</groupId>
			<artifactId>web</artifactId>
			<version>1.0</version>
			<type>war</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>br.com.hdntec.gestao</groupId>
			<artifactId>domain</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<artifactId>ear</artifactId>
</project>